  <p>↓パスワードを入力してください↓</p>
   <input type="button" value="パスワードを入力"onclick="gate();">
   <script type="text/javascript">
function gate(){
  var Userlnput = prompt("パスワードを入力してください：","");
  if(/\W+/g.test(Userlnput)){
    alert("半角英数字のみを入力してください。");
 }
 else if(Userlnput != null){
    location.href = Userlnput +".html";
  }
}
</script>
